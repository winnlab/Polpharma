doctype html
html(lang="#{data.lang}")
	head
		link(rel="shortcut icon" href="/img/user/favicon.ico" type="image/x-icon")
		title Polpharma
		style.
			#preloader {
				position: fixed;
				top: 0;
				right: 0;
				bottom: 0;
				left: 0;
				z-index: 100;
				background: #ffffff;
			}
			#preloader img {
				position: absolute;
				left: 50%;
				top: 50%;
				margin: -25px 0 0 -126.5px;
				width: 258px;
				height: 50px;
				-webkit-animation: fading 1500ms infinite;
				-moz-animation:    fading 1500ms infinite;
				-o-animation:      fading 1500ms infinite;
				animation:         fading 1500ms infinite;
			}
			@-webkit-keyframes fading {
				0%   { opacity: 0; }
				50% { opacity: 1; }
				100% { opacity: 0; }
			}
			@-moz-keyframes fading {
				0%   { opacity: 0; }
				50% { opacity: 1; }
				100% { opacity: 0; }
			}
			@-o-keyframes fading {
				0%   { opacity: 0; }
				50% { opacity: 1; }
				100% { opacity: 0; }
			}
			@keyframes fading {
				0%   { opacity: 0; }
				50% { opacity: 1; }
				100% { opacity: 0; }
			}
	body(class="#{data.lang}")
		div#preloader
			img(src='/img/user/logo.png')
